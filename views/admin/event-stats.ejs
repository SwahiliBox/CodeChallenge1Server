<div class="row">
  <div class="large-12 medium-12 columns">
    <div class="panel panel-white">
      <h2>Hello !</br></h2>
      <h3>Welcome to the Admin dashboard.</h3>
      <%for(i=0; i<events.length; i++) { %>
        <% [i+1]%>
      <% } %>
      <h2>You have <%= [i] %> upcoming events.</br></h2>
      <div class="row">
        <div class="large-12 medium-12 columns">
          <div class="panel panel-white">
            <div class="panel-heading">
              <h4 class="panel-title">Events</h4>
            </div>
            <div class="panel-body">
              <div class="table-responsive project-stats">
                <table style="width: 100%">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Title</th>
                      <th>Venue</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Description</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>

                    <%for(i=0; i<events.length; i++) { %>
                    <tr>
                      <th scope="row"><%= [i+1] %></th>
                      <td><%= events[i].meta.title %></td>
                      <td><%= events[i].meta.venue %></td>
                      <td><%= events[i].meta.date %></td>
                      <td><%= events[i].meta.time %></td>
                      <td><%= events[i].meta.desc %></td>
                      <td><span class="label label-info">Pending</span></td>

                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
