<% layout('dashboard') %>
 <form id="Events-form" method="post" class="form-horizontal" action="/admin/events/update/<%=event.slug %>">
  <div class="row collapse">
   <div class="large-8 small-12 columns">
     <div class="row collapse">
        <div class="small-3 columns">
        <label for="Event Title">Title</label>
        </div>
         <div class="small-9 columns">
          <input type="text" required class="form-control" id="Event Title" name="title" value="<%= event.title %>" />
        </div>
        </div>
        <input type="hidden" name="slug" value="<%= event.slug %>" />
        <div class="row collapse">
        <div class="small-3 columns">
      <label for="Event Venue">Venue</label>
        </div>
         <div class="small-9 columns">
          <input type="text" required class="form-control" id="Event venue" name="venue" value="<%= event.venue %>" />
        </div>
         </div>
        <div class="row collapse">
        <div class="small-3 columns">
        <label for="Event Description">Description</label>
         </div>
         <div class="small-9 columns">
          <textarea cols="42" row collapses="5" required class="form-control" id="Event Description" name="desc" ><%= event.desc %></textarea>
        </div>
        </div>
        <div class="row collapse">
        <div class="small-3 columns">
       <label for="Event Date">Date</label>
        </div>
          <div class="small-9 columns">
          <input type="text" required class="form-control" id="EventDate" name="date" value="<%= event.date %>"/>
        </div>
        </div>
        <div class="row collapse">
        <div class="small-3 columns">
 <label for="Event Time">Time</label>
        </div>
         <div class="small-9 columns">
          <input type="text" required class="form-control" id="EventTime" name="time" value="<%= event.time %>" />
        </div>
    </div>
   <div class="row collapse">
    <div class="large-6 small-12 columns ">
      <button class="large button success right">Update Event </button>
      </div>
      </div>
    </div>
  </form>
   
